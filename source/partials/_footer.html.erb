<footer class="py-8 py-md-11 <%= yield_content :footer_color %>">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4 col-lg-3">

        <!-- Brand -->
        <%= image_tag 'logo.png', class: 'footer-brand img-fluid mb-2', alt: 'logo' %>
        <!-- Text -->
        <p class="text-gray-700 mb-2">
          <%= t('footer.slogan') %>
        </p>

        <!-- Social -->
        <ul class="list-unstyled list-inline list-social mb-6 mb-md-0">
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://www.linkedin.com/company/badge-en-ligne/" class="text-decoration-none">
              <%= image_tag 'icons/social/linkedin.svg', class: 'list-social-icon', alt: 'linkedin icon' %>
            </a>
          </li>
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://www.facebook.com/badgeenligne/" class="text-decoration-none">
              <%= image_tag 'icons/social/facebook.svg', class: 'list-social-icon', alt: 'facebook icon' %>
            </a>
          </li>
          <li class="list-inline-item list-social-item mr-3">
            <a href="https://twitter.com/badge_en_ligne" target="_blank" class="text-decoration-none">
              <%= image_tag 'icons/social/twitter.svg', class: 'list-social-icon', alt: 'twitter icon' %>
            </a>
          </li>
        </ul>

      </div>
      <div class="col-6 col-md-4 col-lg-2">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          <%= t('footer.solutions') %>
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0">
          <li class="mb-3">
            <%= link_to t('footer.pricing'), 'tarifs', class: 'text-reset' %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.why_use_it'), 'pourquoi-nous-choisir', class: 'text-reset' %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.printing_badge'), 'badges-a-imprimer', class: 'text-reset' %>
          </li>
          <li>
            <%= link_to t('footer.adhesive_badge'), 'badges-adhesifs', class: 'text-reset' %>
          </li>
        </ul>

      </div>
      <div class="col-6 col-md-4 col-lg-2">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          <%= t('footer.badges') %>
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0">
          <li class="mb-3">
            <%= link_to t('footer.conference_badge'), 'badges-conference', class: "text-reset" %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.event_badge'), 'badges-evenement', class: "text-reset" %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.seminar_badge'), 'badges-seminaire-entreprise', class: "text-reset" %>
          </li>
          <li>
            <%= link_to t('footer.pro_badge'), 'badges-professionnels', class: "text-reset" %>
          </li>
        </ul>

      </div>
      <div class="col-6 col-md-4 offset-md-4 col-lg-2 offset-lg-0">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          <%= t('footer.ressources') %>
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-0">
          <li class="mb-3">
            <%= link_to t('navbar.blog'), 'blog', class:'text-reset' %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.faq'), 'faq', class: "text-reset" %>
          </li>
          <li class="mb-3">
            <%= link_to t('footer.testimonials'), '/index.html#temoignages-clients', class: "text-reset" %>
          </li>
        </ul>

      </div>
      <div class="col-6 col-md-4 col-lg-2">

        <!-- Heading -->
        <h6 class="font-weight-bold text-uppercase text-gray-700">
          <%= t('footer.entreprise') %>
        </h6>

        <!-- List -->
        <ul class="list-unstyled text-muted mb-0">
          <li class="mb-3">
            <%= link_to t('navbar.contact'), 'contact', class:'text-reset' %>
          </li>
          <li>
            <%= link_to t('footer.legal_mention'), '/mentions-legales', class:'text-reset' %>
          </li>
        </ul>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</footer>
