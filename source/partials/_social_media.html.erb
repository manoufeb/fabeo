<!-- twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@badge_en_ligne" />
<meta name="twitter:title" content="<%= content_for?(:title) ? yield_content(:title) : t('index.meta.title') %>" >
<meta name="twitter:description" content="<%= content_for?(:desc) ? yield_content(:desc) : t('index.meta.desc') %>" >
<meta name="twitter:image" content="<%= base_url + image_path('social/badge_en_ligne_twitter.png') %>" />
<meta name="twitter:url" content="<%= full_url %>" >

