<% content_for(:title, t('badges-a-imprimer.meta.title')) %>
<% content_for(:desc, t('badges-a-imprimer.meta.desc')) %>
<% content_for(:footer_color, 'bg-white') %>

<!-- WELCOME
================================================== -->
<section class="pt-6 pt-md-8">
  <div class="container">
    <div class="row align-items-center justify-content-center justify-content-md-between">
      <div class="col-12 col-md-5 col-lg-6 order-md-2">

        <!-- Image -->
        <div class="mb-8 mb-md-0">
           <%= image_tag 'illustrations/illustration-a-imprimer.png', class: 'img-fluid mw-md-80', alt: 'illustration de badge adhesifs pour évènements'%>
        </div>

      </div>
      <div class="col-12 col-md-6 col-lg-5">

        <!-- Heading -->
        <h1 class="font-weight-bold">
          <%= t('badges-a-imprimer.banner.h1_html') %>
        </h1>

        <!-- Text -->
        <p class="font-size-lg text-muted mb-6">
          <%= t('badges-a-imprimer.banner.desc') %>
        </p>

        <!-- Button -->
        <%= link_to t('badges-a-imprimer.banner.cta'), config[:app_url], class: 'btn btn-primary' %>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- CUSTOMERS
================================================== -->
<section class="py-6 py-md-8 border-bottom">
  <div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0">

        <!-- Brand -->
        <div class="img-fluid text-gray-600 mb-2 mb-md-0 svg-shim">
          <%= include_svg('brands/logotype/sprinklr.svg') %>
        </div>

      </div>
      <div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0">

        <!-- Brand -->
        <div class="img-fluid text-gray-600 mb-2 mb-md-0 svg-shim">
          <%= include_svg('brands/logotype/lewagon.svg') %>
        </div>

      </div>
      <div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0">

        <!-- Brand -->
        <div class="img-fluid text-gray-600 mb-2 mb-md-0 svg-shim">
          <%= include_svg('brands/logotype/uppler.svg') %>
        </div>

      </div>
      <div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0">

        <!-- Brand -->
        <div class="img-fluid text-gray-600 mb-2 mb-md-0 svg-shim">
          <%= include_svg('brands/logotype/spendesk.svg') %>
        </div>

      </div>
      <div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0">

        <!-- Brand -->
        <div class="img-fluid text-gray-600 mb-2 mb-md-0 svg-shim">
          <%= include_svg('brands/logotype/aircall.svg') %>
        </div>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- PRICING
================================================== -->
<section class="py-11 bg-gradient-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">

        <!-- Card -->
        <div class="card card-border border-success shadow-light-lg">
          <div class="card-body">
            <div class="row justify-content-center">
              <div class="col-12 col-xl-11">

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1">
                  <%= t('badges-a-imprimer.pricing.title') %>
                </h2>

                <!-- Image -->
                <div class="text-center mt-4">
                  <%= image_tag 'icons/duotone-icons/Files/File-pdf.svg', alt:'icon-box', class: 'img-fluid mb-3', style: 'width: 100px; transform: rotate(10deg);'   %>
                </div>


                <!-- Text -->
                <p class="font-size-lg text-center text-muted mb-4">
                  <%= t('badges-a-imprimer.pricing.desc') %>
                </p>

                <!-- Price -->
                <div class="d-flex justify-content-center">
                  <span class="price display-2 mb-0"><%= t('badges-a-imprimer.pricing.price') %></span>
                  <span class="h2 mb-0r">€</span>
                </div>

                <!-- Text -->
                <p class="text-center text-muted">
                  <%= t('index.pricing.per_badge') %>
                </p>

              </div>
            </div> <!-- / .row -->
          </div>
        </div>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>


<!-- DETAILS
================================================== -->
<section class="pt-6 pt-md-8 mb-10">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8 text-center">

        <!-- Heading -->
        <h2 class="font-weight-bold mb-7 mb-md-9">
          Détails
        </h2>

      </div>
    </div> <!-- / .row -->
    <div class="row align-items-center">
      <div class="col-12 col-md-6 col-lg-7">

        <!-- Screenshot -->
        <div class="mb-8 mb-md-0">

          <!-- Image -->
          <%= image_tag 'images/illustrations/illustration-badge-3.png', class: 'screenshot img-fluid mw-md-110 float-right mr-md-6 mb-6 mb-md-0', alt: 'illustration de badge'%>

        </div>

      </div>
      <div class="col-12 col-md-6 col-lg-5">

        <!-- List -->
        <% t('badges-a-imprimer.details.features').each do |feature| %>
          <div class="d-flex">

            <!-- Badge -->
            <div class="badge badge-lg badge-rounded-circle badge-success-soft mt-1">
              <i class="fe fe-check"></i>
            </div>

            <!-- Body -->
            <div class="ml-5">

              <!-- Heading -->
              <h3 class="mb-6">
                <%= feature %>
              </h3>


            </div>
          </div>
        <% end %>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- CTA
================================================== -->
<section class="pt-7 pt-md-10 mt-4 bg-white">
  <div class="container pb-6 pb-md-8 border-bottom border-gray-300">
    <div class="row align-items-center">
      <div class="col-12 col-md">

        <!-- Heading -->
        <h3 class="mb-1">
          <%= t('blog.cta_title') %>
        </h3>

        <!-- Text -->
        <p class="font-size-lg text-muted mb-6 mb-md-0">
          <%= t('blog.cta_desc') %>
        </p>

      </div>
      <div class="col-12 col-md-auto">

        <%= link_to t('blog.cta_btn'), config[:app_url], class: 'btn btn-primary lift' %>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

