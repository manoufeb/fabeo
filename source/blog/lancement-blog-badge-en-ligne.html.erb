        <!-- List -->
        <ul class="list-unstyled mb-7">
          <% t("#{current_article.title}.pillars").each do |pillar| %>
            <li class="d-flex">

              <!-- Check -->
              <div class="badge badge-rounded-circle badge-success-soft mt-1 mr-4">
                <i class="fe fe-check"></i>
              </div>

              <!-- Text -->
              <p>
                <%= pillar %>
              </p>
            </li>
          <% end %>
        </ul>

        <!-- Text -->
