          <%= t("#{current_article.title}.paragraph_2_3") %>
        </p>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<% if t("#{current_article.title}").has_key?(:slideshow) %>
  <!-- SLIDESHOW
  ================================================== -->
  <section class="pt-6 pt-md-8">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-11 col-xl-10">

          <!-- Slider -->
          <div data-flickity='{"wrapAround": true, "pageDots": false, "imagesLoaded": true, "adaptiveHeight": true}'>
            <% t("#{current_article.title}.slideshow").each do |img| %>
              <div class="w-100">
                <%= image_tag "../images/blog/" + img[:name], class: "img-fluid rounded", alt: img[:alt] %>
              </div>
            <% end %>
          </div>
        </div>
      </div> <!-- / .row -->
    </div> <!-- / .container -->
  </section>

<% end %>


