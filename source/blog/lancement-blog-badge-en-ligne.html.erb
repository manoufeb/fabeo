<% content_for(:social_img, base_url + image_path(t("#{current_article.title}.cover_img"))) %>

<!-- IMAGE
================================================== -->
<section class="py-12 py-md-15 bg-cover" style="background-image: url(../../images/blog/<%= t("#{current_article.title}.cover_img") %>);"></section>

<!-- HEADER
================================================== -->
<section class="pt-8 pt-md-11">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-9 col-xl-8">

        <!-- Heading -->
        <h1 class="display-4 text-center">
          <%= t("#{current_article.title}.title") %>
        </h1>

        <!-- Text -->
        <p class="lead mb-7 text-center text-muted">
          <%= t("#{current_article.title}.short_desc") %>
        </p>

        <!-- Meta -->
        <div class="row align-items-center py-5 border-top border-bottom">
          <div class="col-auto">

            <!-- Avatar -->
            <div class="avatar avatar-lg">
              <%= image_tag '../images/avatars/' + t("#{current_article.title}.avatar"), class: 'avatar-img rounded-circle', alt: "avatar de l'auteur" %>
            </div>

          </div>
          <div class="col ml-n5">

            <!-- Name -->
            <h6 class="text-uppercase mb-0">
              <%= t("#{current_article.title}.author") %>
            </h6>

            <!-- Date -->
            <time class="font-size-sm text-muted" datetime="<%= I18n.l(current_article.date, format: "%d %B") %>">
              <%= I18n.l(current_article.date, format: "%d %B") %>
            </time>

          </div>
          <div class="col-auto">

            <!-- Share -->
            <span class="h6 text-uppercase text-muted d-none d-md-inline mr-4">
              <%= t('blog.share') %>
            </span>

            <!-- Icons -->
            <ul class="d-inline list-unstyled list-inline list-social">
              </li>
              <li class="list-inline-item list-social-item mr-3">
                <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= full_url %>&title=<%= t("#{current_article.title}.title") %>&summary=<%= t("#{current_article.title}.short_desc") %>
" target="_blank" class="text-decoration-none">
                  <%= image_tag '../../images/icons/social/linkedin.svg', class: 'list-social-icon', alt: "linkedin icon" %>
                </a>
              </li>
              <li class="list-inline-item list-social-item mr-3">
                <a href="https://twitter.com/intent/tweet?url=<%= full_url %>" class="text-decoration-none" target="_blank">
                  <%= image_tag '../../images/icons/social/twitter.svg', class: 'list-social-icon', alt: "twitter icon" %>
                </a>
              </li>
            </ul>

          </div>
        </div>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

<!-- SECTION
================================================== -->
<section class="pt-6 pt-md-8">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-9 col-xl-8">

        <!-- Fugure -->
        <figure class="figure mb-7">

          <!-- Image -->
          <%= image_tag '../images/blog/' + t("#{current_article.title}.image_1"), class: 'figure-img img-fluid rounded lift lift-lg', alt: t("#{current_article.title}.caption_1") %>

          <!-- Caption -->
          <figcaption class="figure-caption text-center">
            <%= t("#{current_article.title}.caption_1") %>
          </figcaption>

        </figure>
      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>

