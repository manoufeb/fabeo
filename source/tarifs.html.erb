<% content_for(:title, t('tarifs.meta.title')) %>
<% content_for(:desc, t('tarifs.meta.desc')) %>
<% content_for(:footer_color, 'bg-dark') %>
<!-- WELCOME
================================================== -->
<section class="pt-8 pt-md-11 pb-10 pb-md-15 bg-primary">

  <!-- Shape -->
  <div class="shape shape-blur-3 svg-shim text-white">
    <%= include_svg('shapes/blurs/blur-3.svg') %>
  </div>

  <!-- Content -->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8 text-center">

        <!-- Heading -->
        <h1 class="display-2 text-white">
          <%= t('tarifs.banner.h1') %>
        </h1>

        <!-- Text -->
        <p class="lead text-white-80 mb-6 mb-md-8">
          <%= t('tarifs.banner.desc') %>
        </p>

      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->

</section>

<!-- SHAPE
================================================== -->
<div class="position-relative">
  <div class="shape shape-bottom shape-fluid-x svg-shim text-light">
    <%= include_svg('shapes/curves/curve-1.svg') %>

  </div>
</div>

<!-- PRICING
================================================== -->
<section class="mt-n8 mt-md-n14">
  <div class="container">
    <div class="form-row">
      <div class="col-12 col-md-4">

        <!-- Card -->
        <div class="card card-border card-border-xl border-success shadow-light-lg mb-6 mb-md-0 lift lift-lg">
          <div class="card-body">

            <!-- Badge -->
            <h6 class="font-weight-bold text-uppercase text-center text-success mb-5"><%= t('index.pricing.plans.plan_1.title') %></h6>

            <!-- Icon -->
            <div class="icon text-primary mb-3 text-center">
              <%= include_svg("icons/duotone-icons/Files/File-pdf.svg") %>
            </div>

            <!-- Price -->
            <div class="d-flex justify-content-center">
              <span class="price display-2 mb-0"><%= t('index.pricing.plans.plan_1.price') %></span>
              <span class="h2 mb-0 mt-2">€</span>
            </div>

            <!-- Text -->
            <p class="text-center text-muted">
              <%= t('index.pricing.per_badge') %>
            </p>

            <!-- List -->
            <% t('index.pricing.plans.plan_1.desc').each do |feature| %>
            <div class="d-flex">

              <!-- Badge -->
              <span class="badge badge-rounded-circle badge-success-soft mt-1 mr-4">
                <i class="fe fe-check"></i>
              </span>

              <!-- Text -->
              <p>
                <%= feature %>
              </p>
            </div>
            <% end %>
            <!-- Link -->
            <div class="text-center mt-2">
              <%= link_to t('index.pricing.learn_more'), '/badges-a-imprimer', class:'font-size-sm font-weight-bold text-decoration-none' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">

        <!-- Card -->
        <div class="card card-border card-border-xl border-info shadow-light-lg lift lift-lg">
          <div class="card-body">

            <!-- Badge -->
            <h6 class="font-weight-bold text-uppercase text-info text-center mb-5"><%= t('index.pricing.plans.plan_2.title') %></h6>

            <!-- Icon -->
            <div class="icon text-primary mb-3 text-center">
              <%= include_svg("icons/duotone-icons/Files/Adhesive-badge.svg") %>
            </div>

            <!-- Price -->
            <div class="d-flex justify-content-center">
              <span class="price display-2 mb-0"><%= t('index.pricing.plans.plan_2.price') %></span>
              <span class="h2 mb-0 mt-2">€</span>
            </div>

            <!-- Text -->
            <p class="text-center text-muted">
              <%= t('index.pricing.per_badge') %>
            </p>

            <!-- List -->
            <% t('index.pricing.plans.plan_2.desc').each do |feature| %>
              <div class="d-flex">

                <!-- Badge -->
                <span class="badge badge-rounded-circle badge-success-soft mt-1 mr-4">
                  <i class="fe fe-check"></i>
                </span>

                <!-- Text -->
                <p>
                  <%= feature %>
                </p>
              </div>
            <% end %>
            <!-- Link -->
            <div class="text-center mt-2">
              <%= link_to t('index.pricing.learn_more'), 'badges-adhesifs', class:'font-size-sm font-weight-bold text-decoration-none' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4">

        <!-- Card -->
        <div class="card card-border card-border-xl border-danger shadow-light-lg">
          <div class="card-body">

            <!-- Badge -->
            <h6 class="font-weight-bold text-uppercase text-center text-danger mb-5"><%= t('index.pricing.plans.plan_3.title') %></h6>

            <!-- Icon -->
            <div class="icon text-primary mb-3 text-center">
              <%= include_svg("icons/duotone-icons/Files/Printed-badge.svg") %>
            </div>

            <!-- Price -->
            <div class="d-flex justify-content-center">
              <span class="price display-2 mb-0"><%= t('index.pricing.plans.plan_3.price') %></span>
              <span class="h2 mb-0 mt-2">€</span>
            </div>

            <!-- Text -->
            <p class="text-center text-muted">
              <%= t('index.pricing.per_badge') %>
            </p>

            <!-- List -->
            <% t('index.pricing.plans.plan_3.desc').each do |feature| %>
              <div class="d-flex">

                <!-- Badge -->
                <span class="badge badge-rounded-circle badge-success-soft mt-1 mr-4">
                  <i class="fe fe-check"></i>
                </span>

                <!-- Text -->
                <p>
                  <%= feature %>
                </p>
              </div>
            <% end %>

            <div class="text-center">
              <!-- Badge -->
              <span class="badge badge-pill badge-primary-soft ml-auto">
                <%= t('index.pricing.plans.plan_3.soon') %>
              </span>
            </div>

          </div>
        </div>
      </div>
      <div class="col-12 pt-8 text-center">
        <!-- Button -->
        <% link_to config[:app_url], class:'btn btn-success shadow lift mr-1' do %>
          <%= t('index.pricing.cta') %>
          <i class="fe fe-arrow-right d-none d-md-inline ml-3"></i>
        <% end %>
      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>


